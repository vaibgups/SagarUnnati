<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90"
                        android:endColor="#FFFFFF" android:startColor="#FFFFFF" android:type="linear" />
                    <stroke android:width="@dimen/dimen_1dp" android:color="@android:color/secondary_text_light_nodisable" />
                    <corners android:radius="@dimen/dimen_3dp" />
                    <padding android:bottom="@dimen/dimen_2dp"
                        android:left="@dimen/dimen_2dp" android:right="@dimen/dimen_2dp" android:top="@dimen/dimen_2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right"
                    android:src="@drawable/spinner_drop_down" />
            </item>
        </layer-list>
    </item>

</selector> 