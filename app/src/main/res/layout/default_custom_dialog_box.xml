<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvCstDigHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Heading"
        android:textColor="@color/text_color_black"
        android:textSize="18sp"/>

    <View
        android:id="@+id/viewCstDig"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvCstDigHeading"
        android:layout_marginTop="10dp"
        android:background="@color/text_color_black"
        />

    <RelativeLayout
        android:id="@+id/rlCstDigMessageParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCstDig"
        android:gravity="center_vertical"
        android:layout_margin="15dp">

        <com.example.sagarunnati.utility.JustifiedTextView
            android:id="@+id/tvCstDigMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dialog Message"
            android:textColor="@color/text_color_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewCstDig2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlCstDigMessageParent"
        android:background="@color/text_color_black"/>

    <LinearLayout
        android:id="@+id/llCstDigBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/viewCstDig2"
        android:weightSum="2">
        
        <Button
            android:id="@+id/btnCstDigDecline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:text="Decline"
            android:textAllCaps="false"
            android:textColor="@color/text_color_black"
            android:textSize="15sp"
            />

        <View
            android:id="@+id/viewCstDig3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_black"/>


        <Button
            android:id="@+id/btnCstDigAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/text_color_black"
            android:textSize="15sp"/>
        
    </LinearLayout>

    <View
        android:id="@+id/viewCstDig4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llCstDigBottomLayout"
        android:background="@color/text_color_black"/>

</RelativeLayout>