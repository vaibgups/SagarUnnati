<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvDashBoardBackGround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:cardBackgroundColor="@color/daily_vessel_position"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/ivDashBoardIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/rlDashBoardDetailSubParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_round_radius"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rlDashBoardDetail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tvDashbordHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Daily Vessel Position"
                android:textColor="@color/text_white_color"
                android:textSize="14sp"
                android:textAlignment="textEnd"/>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/llSub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llSub2"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDashbordSubHead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="117"
                    android:textColor="@color/text_white_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvDashbordSubHead1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="At Berth"
                    android:textColor="@color/text_white_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/llSub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvDashbordSubHead3"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDashbordSubHead2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="93"
                    android:textColor="@color/text_white_color"
                    android:textSize="13sp"

                    />

                <TextView
                    android:id="@+id/tvDashbordSubHead2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="At Anchorage"
                    android:textColor="@color/text_white_color"
                    android:textSize="13sp" />



            </LinearLayout>



            <TextView
                android:visibility="invisible"
                android:id="@+id/tvDashbordSubHead3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="93"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_white_color"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"

                />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/llBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/rlDashBoardDetail">

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_color"
                android:layout_marginBottom="5dp"></View>
            <RelativeLayout
                android:id="@+id/rlDashBoardDetailBottomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewLine"
                android:layout_alignParentLeft="true">



            <ImageView
                android:id="@+id/ivBottomDetails"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/projects_under_sagarmala"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tvBottomDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View details..."
                android:textColor="@color/text_white_color"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/ivBottomDetails"
                android:layout_centerVertical="true"
                />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>